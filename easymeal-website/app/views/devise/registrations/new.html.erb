<h1>Inscription</h1>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div id="step1">
    <h2>Etape 1/3</h2>
    <div class="field">
      <%= f.label :username %><br>
      <%= f.text_field :username %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation %>
      <div id="password_error" class="hidden">Les mots de passes doivent &ecirc;tre les m&ecirc;mes.</div>
    </div>
    <div class="clearfix"></div>
    <div class="actions">
      <%= link_to 'Annuler', root_path, class: "btn btn-large btn-cancel" %>
      <%= link_to 'Suivant', "#", class: "btn btn-large btn-success disabled",
        onclick: "step2();return false;", id: "nextStep1button" %>
    </div>
  </div>
  
  <div id="step2" class="hidden">
    <h2>Etape 2/3</h2>
    <div class="field">
      <%= f.label :firstname %><br>
      <%= f.text_field :firstname %>
    </div>
    <div class="field">
      <%= f.label :lastname %><br>
      <%= f.text_field :lastname %>
    </div>
    <div class="actions">
      <%= link_to 'Précédent', "#", class: "btn btn-large btn-cancel",
        onclick: "step1();return false;" %>
      <%= link_to 'Suivant', "#", class: "btn btn-large btn-success disabled",
        onclick: "step3();return false;", id: "nextStep2button" %>
    </div>
  </div>
  
  <div id="step3" class="hidden">
    <h2>Etape 3/3</h2>
    <div class="field">
      <%= f.label :gender %><br>
      <%= f.select :gender, "<option>male</option><option>female</option>".html_safe %>
    </div>
    <div class="field">
      <%= f.label :birth %><br>
      <%= f.text_field :birth, id: "datepicker" %>
    </div>
    
    <div class="actions">
      <%= link_to 'Précédent', "#", class: "btn btn-large btn-cancel",
        onclick: "step2();return false;" %>
      <%= f.submit "Terminer", class: "btn btn-large btn-success", style: "margin-left: 50px;" %>
    </div>
  </div>

<% end %>



<script>
  $(document).ready(function() {
    nextButtonStep2();
    $( "#datepicker" ).datepicker({ firstDay: 1,
      defaultDate: "-30y",
      changeYear: true,
      navigationAsDateFormat: true,
      dayNamesMin: [ "Di", "Lu", "Ma", "Me", "Je", "Ve", "Sa" ],
      monthNames: [ "Janvier", "Février", "Mars", "Avril", "Mai", "Juin",
    "Juillet", "Août", "Septembre", "Octobre", "Novembre", "Décembre" ] });
    $("#user_password_confirmation").keyup(function(){
      var ret = samePasswords();
      nextButtonStep1(ret);
    });
    $("#user_password").keyup(function(){
      var ret = samePasswords();
      nextButtonStep1(ret);
    });
    $("#user_username").keyup(function(){
      var ret = samePasswords();
      nextButtonStep1(ret);
    });
    $("#user_mail").keyup(function(){
      var ret = samePasswords();
      nextButtonStep1(ret);
    });
    $("#user_firstname").keyup(function(){nextButtonStep2()});
    $("#user_lastname").keyup(function(){nextButtonStep2()});
  });
</script>