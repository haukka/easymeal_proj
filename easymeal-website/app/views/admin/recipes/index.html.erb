                                    <td><%= recipe.updated_at.strftime("%d/%m/%y") %></td>
                                    <td><%= link_to admin_recipe_path(recipe) do %><i class="fa fa-edit"></i><% end %></td>
                                </tr>
                            <% end %>
                        <% end %>
